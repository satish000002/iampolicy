{
    "Version":"2012-10-17",
    "Statement":[
       {
          "Effect":"Allow",
          "Action":"ec2:Describe*",
          "Resource":"*"
       },
       {
         "Effect":"Allow",
         "Action":"cloudwatch:DescribeAlarms",
         "Resource":"*"
      },
      {
         "Effect":"Allow",
         "Action":"s3:*",
         "Resource":"*"
      },
       {
          "Effect":"Allow",
          "Action":[
             "ec2:StartInstances",
             "ec2:StopInstances", 
             "ec2:RebootInstances"
          ],
          "Resource":[
             "arn:aws:ec2:us-east-2:578736633216:instance/*"
          ],
          "Condition":{
             "StringEquals":{
                "ec2:ResourceTag/Env":"Dev"
             }
          }
       }
    ]
 }


